<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#3F51B5"
    tools:context=".MainActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <TextView
            android:id="@+id/Descri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição da Transação:"
            android:textSize="16sp"
            android:padding="8dp" />
        
        <EditText
            android:id="@+id/DescriUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Digite a descrição"
            android:padding="8dp" />
        
        <TextView
            android:id="@+id/Inform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecione o Tipo de Transação:"
            android:textSize="16sp"
            android:padding="8dp" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#51C856"
                android:text="Crédito"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FA4848"
                android:text="Débito"
                android:textColor="@color/black" />
        </LinearLayout>
        
        <TextView
            android:id="@+id/InformVal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informe o valor:"
            android:textSize="16sp"
            android:padding="8dp" />
        
        <EditText
            android:id="@+id/Val"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:hint="Digite o valor"
            android:padding="8dp" />
        
        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#3F51B5"
            android:gravity="center"
            android:text="Adicionar"
            android:padding="8dp" />
        
        
        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp" />

        <TextView
            android:id="@+id/Total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2196F3"
            android:gravity="center"
            android:text="Total: R$ 0.00"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:padding="16dp" />
        
        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#3F51B5"
            android:text="Limpar"
            android:padding="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
